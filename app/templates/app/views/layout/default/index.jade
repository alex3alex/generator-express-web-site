extends ../index

append css
	link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600&subset=latin,cyrillic-ext,latin-ext,cyrillic', rel='stylesheet', type='text/css')
	link(rel='stylesheet', href='/static/styles/layout/default/index.css')

block content
	.b-layout__header
		block header
			.container
				+header-menu(headerLinksBar)

	.b-layout__body-wr.clearfix
		.container.b-layout__body
			block body
				.row.clearfix(style="padding: 15px 0 0;")
					.col-sm-8.b-layout__main
						block main
							+breadcrumb(breadcrumbLinksBar)
							//p Content

					.col-sm-4.b-layout__sidebar
						block sidebar
							//p sidebar

	.b-layout__footer
		block footer
			p!= '&copy;' + moment().format('YYYY') + '&nbsp;all rights reserved'
